<script>
    function postContactToGoogle() {
        var name = $('#name').val();
        var email = $('#email').val();
        var number = $('#number').val();

            $.ajax({

                url: "https://docs.google.com/forms/d/e/1FAIpQLSdo7-jXzHyAgqrFGB3RRFU-H6FHefTzSFn2dZ49GqOPH7WFKQ/formResponse",
                data: { "entry.350514573": name,
                "entry.1309896648": email, "entry.1843888982":
                number },
                type: "POST",
                dataType: "xml",
                statusCode: {
                    0: function () {
                        alert("submitted");
                    },
                    200: function () {
                        alert("submitted");
                    }
                }
            });
    }
</script>



